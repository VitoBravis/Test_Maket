    .info
        .info__inner
            .info__bg
                img.info__picture(src="images/logo_bg.svg" alt="")
            .info__item
                .info__title
                    h3 NewTech Services Holding Limited
                .info__text
                    p NewTech Services Holding Limited is an international oilfield services company founded in 2009. NewTech Services supplies high technology products and services to the oil and gas exploration and production industry.
            .info__item
                .info__count
                    .count__item
                        h3 9
                        h4 Manufacturing Facilities Worldwide
                    .count__item
                        h3 12
                        h4 Service & Maintenance Centers Worldwide
                .info__office
                    .office__item
                        h2 27
                        h4 Regional Offices Worldwide
                    .office__item
                        h2 13
                        h4 Regional Offices in Russia
    //Map
    .map
        .map__bg
            img.map__picture(src="images/map_Light.png" alt="")
        .map__nav
            a.map__nav-link.map__nav-link--active(href="#") World
            a.map__nav-link(href="#") Russia
