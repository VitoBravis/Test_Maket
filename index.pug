                    img.logo(src='images/logo1.svg' alt='')
            nav.nav
                a.nav__link(href='#') About us
                a.nav__link(href='#') Products &amp; Services
                a.nav__link(href='#') Contacts
        .header__item
            .header__phone Houston Ph: 832-559-1608
            .header__phone Midland Ph: 432-789-1080
// Main
main.main
    //TODO Index(slider)
    .index
        .index__inner
            .index__bg
